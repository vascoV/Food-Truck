{
  "name": "foodtruck-api",
  "version": "0.0.1",
  "description": "Food Truck API for Devslopes RESTful API Course",
  "main": "dist",
  "scripts": {
    "dev": "NODE_ENV=development nodemon -w source --exec \"babel-node src --presets es2015,stage-0 \"",
    "build": "babel src -s -D -d dist --presets es2015,stage-0",
    "start": "NODE_END=production pm2 start dist",
    "prestart": "npm run -s build",
    "lint": "eslint src",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 7,
      "sourceTyoe": "module"
    },
    "env": {
      "node": true
    },
    "rules": {
      "no-console": 0,
      "no-unused-vars": 1
    }
  },
  "author": "Vasil Vasilev (vassco.vasilev@gmail.com)",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.18.3",
    "express": "^4.16.3",
    "express-jwt": "^5.3.1",
    "jsonwebtoken": "^8.3.0",
    "mongoose": "^5.2.14",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "passport-local-mongoose": "^5.0.1"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^9.0.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "eslint": "^5.5.0",
    "nodemon": "^1.18.4"
  }
}
